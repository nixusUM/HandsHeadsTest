<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white_two"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.friends.handsheadstest.MainActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/white"
            android:fitsSystemWindows="true"
            app:titleTextAppearance="@style/MainActivityActionBar">

            <TextView
                android:visibility="gone"
                android:id="@+id/txt_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textSize="@dimen/toolbar_create_text_size"
                android:textAllCaps="true"
                android:layout_marginRight="@dimen/toolbar_title_text_size"
                android:layout_marginEnd="@dimen/toolbar_title_text_size"
                android:text="@string/create"
                android:textColor="@color/txt_color" />
        </android.support.v7.widget.Toolbar>

    <com.victor.loading.rotate.RotateLoading
        android:id="@+id/rotate_loading"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        app:loading_width="5dp"
        app:loading_color="@color/txt_color" />

    <FrameLayout
        android:layout_marginTop="@dimen/fragment_margin_top"
        android:background="@color/white"
        android:id="@+id/fragment_content"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    </FrameLayout>

</RelativeLayout>
